<Window x:Class="FolderIconCreator.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Image x:Name="imageFolder" x:FieldModifier="private" SnapsToDevicePixels="True" Width="32" Height="32">
        </Image>   
        
        <Image x:Name="imageFolder2" x:FieldModifier="private" Grid.Column="1" SnapsToDevicePixels="True" Width="32" Height="32">
        </Image>
    </Grid>
</Window>
